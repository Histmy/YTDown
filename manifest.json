{
    "name": "YTDown",
    "description": "__MSG_addonDescription__",
    "version": "0.4.1",
    "homepage_url": "https://github.com/Histmy/YTDown",
    "manifest_version": 2,
    "icons": {
        "128": "images/icon.png"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "page_action": {
        "show_matches": [
            "*://www.youtube.com/watch*"
        ],
        "default_icon": "images/icon.png"
    },
    "permissions": [
        "tabs",
        "downloads"
    ],
    "default_locale": "en"
}
