{
    "name": "YTDown",
    "description": "The best way to download music from YouTube.",
    "version": "0.4.0",
    "homepage_url": "https://github.com/Histmy/YTDown",
    "manifest_version": 2,
    "icons": {
        "128": "images/icon.png"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "page_action": {
        "show_matches": [
            "*://www.youtube.com/watch*"
        ],
        "default_icon": "images/icon.png"
    },
    "permissions": [
        "tabs",
        "downloads"
    ]
}
